@model OpenLibrary.Areas.Admin.Models.AddViewModel
@using Microsoft.AspNetCore.Mvc.Rendering
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-file-text-o"></i>@ViewData["title_table"]</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="@Url.Action("Index","LoaiSach")">Trang Chủ</a></li>
                <li><i class="icon_document_alt"></i>Biểu  mẫu</li>
                <li><i class="fa fa-file-text-o"></i>@ViewData["title_table"]</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    @ViewData["title_table"]
                </header>
                <div class="panel-body">
                    <form class="form-horizontal " method="post" action="/admin/loaisach/add">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">TÊN LOẠI SÁCH</label>
                            <div class="col-sm-6">
                                <input asp-for="TenLoaiSach" type="text" class="form-control round-input">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-2" for="inputSuccess">THUỘC</label>
                            <div class="col-lg-6">
                                <select asp-for="IdLoaiSachCha" class="form-control m-bot15" asp-items="@(new SelectList(Model.listLoaiSach,"_id","TenLoaiSach"))">
                                    <option>Chọn...</option>
                                    <option value="0">Loại Chính</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">HIỆN THỊ</label>
                            <div class="col-sm-6">
                                <div class="material-switch pull-right">
                                    <input asp-for="TrangThai" id="hien_thi" type="checkbox">
                                    <label for="hien_thi" class="label-success"></label>
                                </div>
                            </div>
                        </div>

                        <button type="submit">Thêm</button>
                    </form>
                </div>
            </section>

        </div>
    </div>



</section>





